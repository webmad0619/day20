<form action="/update-book" method="POST">
  <input type="text" name="title" value="{{title}}" placeholder="title">
  <input type="text" name="year" value="{{year}}"  placeholder="year">
  <input type="text" name="author" value="{{author}}"  placeholder="author">
  {{!-- we need to send the book id to the update endpoint
  so we know which book we are updating --}}
  <input type="hidden" name="_id" value="{{_id}}">

  {{!-- <input type="text" name="_id" value="{{_id}}" disabled> --}}

  <input type="submit" value="Update the book">
</form>